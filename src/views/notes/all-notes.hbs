<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between align-items-center"><h1>{{title}} </h1><a href="notes/edit/{{_id}}"><i class="fa fa-pencil"></i></a></div>
                <h1>{{description}}</h1>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST"><button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button></form>
                <input type="hidden" name="_method" value="DELETE">
            </div>
        </div>
    </div>
    {{/each}}
</div>




